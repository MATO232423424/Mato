<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>LOKACIJE</title>
<link rel="stylesheet" href="style.css">
</head>
<body>
<div id="menu">
    <h1>LOKACIJE</h1>
    <div id="lokacije-list"></div>
    <button onclick="closeMenu()">Zapri</button>
</div>

<script>
window.addEventListener('message', function(event) {
    if (event.data.action == 'openMenu') {
        const list = document.getElementById('lokacije-list');
        list.innerHTML = '';

        event.data.lokacije.forEach(lok => {
            const div = document.createElement('div');
            div.className = 'lokacija';
            // samo slika, brez napisa pod njo
            div.innerHTML = `<img src="${lok.slika}" alt="lokacija">`;
            div.onclick = () => {
                fetch(`https://${GetParentResourceName()}/teleport`, {
                    method: 'POST',
                    body: JSON.stringify(lok)
                });
            }
            list.appendChild(div);
        });

        document.getElementById('menu').style.display = 'flex';
    } else if (event.data.action == 'closeMenu') {
        document.getElementById('menu').style.display = 'none';
    }
});

function closeMenu() {
    fetch(`https://${GetParentResourceName()}/close`, { method: 'POST' });
}
</script>
</body>
</html>
